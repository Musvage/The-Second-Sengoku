### MODIFIERS TOOLTIP
defined_text = {
	name = GET_division_limit_org_factor_mod
	
	text = {
		trigger = {
			check_variable = { army_org_factor_mod < 0 }
		}
		localization_key = GET_division_limit_org_factor_mod_enabled
	}
	
	text = {
		trigger = {
			check_variable = { army_org_factor_mod = 0 }
		}
		localization_key = GET_division_limit_org_factor_mod_disabled
	}
}
